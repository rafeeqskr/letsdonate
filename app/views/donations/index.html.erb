
<div class="row">
<div class="col-md-8">
  <h2>Donations</h2>
</div>
<div class="col-md-4 top-women" style="background: none;">
  <%= link_to 'Add New Donation', new_donation_path %>
</div>
</div>


<div class="online">
  <% @donations.each do |donation| %>
  <div class="online-top">
    <div class="top-at">
      <img class="img-responsive" src="<%= asset_path('la.jpg') %>" alt="">
      <span><%= donation.name %></span>
    </div>
    <div class="top-on">
      <div class="col-sm-12">
        <p><%= donation.description %></p>
      </br>
      <div class="col-sm-2">
        <%= donation.city %>
      </div>
      <div class="col-sm-4">
        Expired on :</br> <%= donation.expiry.strftime("%b %d %Y %d %p") %>
      </div>
      <div class="col-sm-2">
        <%= donation.category %>
      </div>
      <div class="col-sm-4">
        <a href="<%= donation_path(donation) %>" class="#up-in ">Show</a>&nbsp
        <a href="<%= edit_donation_path(donation) %>" class="#up-in ">Edit</a>
      </div>
      </div>

    </div>
    <div class="clearfix"> </div>
  </div>
  <% end %>

</div>
