
<h1>Listing Donations</h1>


<div class="online">
  <% @donations.each do |donation| %>
  <div class="online-top">
    <div class="top-at">
      <img class="img-responsive" src="<%= asset_path('la.jpg') %>" alt="">
      <span><%= donation.name %></span>
    </div>
    <div class="top-on">
      <div class="col-sm-12">
        <p><%= donation.description %></p>
      </br>
      <div class="col-sm-2">
        <%= donation.city %>
      </div>
      <div class="col-sm-4">
        Expired on :</br> <%= donation.expiry.strftime("%b %d %Y %d %p") %>
      </div>
      <div class="col-sm-2">
        <%= donation.category %>
      </div>
      <div class="col-sm-4">
        <a href="<%= donation_path(donation) %>" class="buy ">Show</a>&nbsp
        <a href="<%= edit_donation_path(donation) %>" class="buy pull-right">Edit</a>
      </div>
      </div>

    </div>
    <div class="clearfix"> </div>
  </div>
  <% end %>

</div>
<%= link_to 'New Donation', new_donation_path %>
