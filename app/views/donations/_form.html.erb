<%= form_for(@donation,html: {class: "form-horizontal"}) do |f| %>
  <% if @donation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@donation.errors.count, "error") %> prohibited this donation from being saved:</h2>

      <ul>
      <% @donation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="ld_label col-sm-2" for="email">Name:</label>
    <div class="col-sm-6">
      <%= f.text_field :name, class: "form-control", placeholder: "Enter Name"%>
    </div>
  </div>

  <div class="form-group">
    <label class="ld_label col-sm-2" for="email">Description:</label>
    <div class="col-sm-6">
      <%= f.text_area :description, class: "form-control", placeholder: "Enter Description"%>
    </div>
  </div>

  <div class="form-group">
    <label class="ld_label col-sm-2" for="email">Category:</label>
    <div class="col-sm-6">
      <%= f.select(:category, options_for_select([["Clothes", "Clothes", {class: "dropdown-menu"}], ["Food", "Food", {class: "dropdown-menu"}], ["Books", "Books", {class: "dropdown-menu"}], ["Furniture", "Furniture", {class: "dropdown-menu"}]]), {}, { :class => 'form-control' }) %>
    </div>
  </div>

  <div class="form-group" style="display:none">
    <label class="ld_label col-sm-2" for="email">Expiry:</label>
    <div class="col-sm-6">
      <%= f.datetime_select :expiry, {class: "form-control"}%>
    </div>
  </div>

  <div class="form-group">
    <label class="ld_label col-sm-2" for="email">Expiry:</label>
    <div class="col-sm-6">
      <%= text_field_tag "donation[expiry_clone_field]", nil, {class: "form-control datepicker"} %>
    </div>
  </div>

  <div class="form-group">
    <label class="ld_label col-sm-2" for="email">City:</label>
    <div class="col-sm-6">
      <%= f.text_field :city, {class: "form-control"}%>
    </div>
  </div>


  <div class="form-group">
    <label class="ld_label col-sm-2" for="email">User-id:</label>
    <div class="col-sm-6">
      <%= f.number_field :user_id, {class: "form-control"}%>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>













