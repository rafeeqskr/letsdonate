<div class="container">
  <div class="col-md-8">
    <h2>Your Donations</h2>
  </div>
  <div class="col-md-4 top-women" style="background: none;">
    <%= link_to 'Add New Donation', new_donation_path %>
  </div>
</div>
<div class="container">
  <div class="">
    <% @donations.each do |donation| %>
    <div class="col-md-4">
      <div class="women">
        <a href="#"><img class="img-responsive" src="<%= donation.user.image.url if donation.user.image %>" style="width: 100%; height: 150px;" alt=""></a>
        <div class="women-top-in">
          <div class="women-top">
            <h5><%= donation.user.name %></h5>
            <p><%= donation.category %> | <b><%= donation.city %></b></p>
            <div class="clearfix"> </div>
          </div>
          <p class="sit"><%= donation.description %></p>
          <center></center>
        </div>
        <div class="top-women">
          <% if donation.user == current_user %>
          <a href="<%= edit_donation_path(donation) %>">Manage</a>
          <% else %>
          <a href="<%= donation_path(donation) %>">Show</a>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>



